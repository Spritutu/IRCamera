					</HorizontalLayout>
				</VerticalLayout>

				<VerticalLayout padding="10,10,10,10">
					<HorizontalLayout height="40">
						<Label text="摄像头数目: " width="100"/>
						<Edit name="camera_count" text="1" width="40"/>
					</HorizontalLayout>
					<HorizontalLayout height="40">
						<Label text="IP: " width="100"/>
						<Edit name="camera_ip_addr" text="192.168.1.2" width="100"/>
					</HorizontalLayout>
					<HorizontalLayout height="40">
						<Label text="阈值温度: "width="100"/>
						<Edit name="threshold_temp" width="40" text="60"/>
						<Label text="C"/>
					</HorizontalLayout>
				</VerticalLayout>

			</TabLayout>

		</VerticalLayout>

		<VerticalLayout>
			<Button name="connect_btn" height="30" font="1" minwidth="60" maxwidth="120" padding="5,5,5,10" text="Connect"/>
			<Button name="disconnect_btn" height="30" font="1" minwidth="60" maxwidth="120" padding="5,5,5,10" text="Disconnect" enabled="false"/>
			<Control height="100"/>
			<Button name="set_btn" height="30" font="1" minwidth="60" maxwidth="120" padding="5,5,5,10" text="设置"/>
		</VerticalLayout>
	</HorizontalLayout>
</Window>
