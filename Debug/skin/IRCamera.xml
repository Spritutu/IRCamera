<?xml version="1.0" encoding="UTF-8"?>
<Window mininfo="750,400" maxinfo="1080,960" size="830,650">
	<Font name="微软雅黑" size="14" default="true"/>
	<Font name="微软雅黑" size="16"  />
	<Include source="scrollbar.xml" />
	<HorizontalLayout bkcolor="#FFFFFFFF">
		<TabLayout selectedid="0" name="content_layout">
			<!-- Normal Layout -->
			<VerticalLayout bkimage="bg13.png">
				<TileLayout name="camera_image_list" itemsize="350,350" bordersize="2" bkcolor="#FFEEFFEE" vscrollbar="true">
				</TileLayout>

				<VerticalLayout height="60" bkimage="bg12.png">
					<HorizontalLayout  height="60" >
						<Label text="颜色对照表" width="100" padding="10,0,0,0"/>
						<VerticalLayout  width="550" height="50" name="color_table_layout">
							<HorizontalLayout height="30">
								<Label width="125" text="0C" align="left"/>
								<Label width="125" text="25C" align="left"/>
								<Label width="125" text="50C" align="left"/>
								<Label width="125" text="75C" align="left"/>
								<Label width="50" text="100C"/>
							</HorizontalLayout>
							<TemperatureTable height="20" name="color_table" />
						</VerticalLayout>
					</HorizontalLayout>
				</VerticalLayout>
				<HorizontalLayout height="40" padding="0,0,10,0">
					<Control />
					<Button text="设置" name="setting_btn" width="50" padding="0,5,10,5" normalimage="button_nor.bmp" hotimage="button_over.bmp" pushedimage="button_down.bmp" disabledimage="Button_Non.png"/>
					<Button text="分析" width="50" padding="10,5,10,5" normalimage="button_nor.bmp" hotimage="button_over.bmp" pushedimage="button_down.bmp" disabledimage="Button_Non.png"/>
				</HorizontalLayout>
			</VerticalLayout>

			<!-- Preference Layout -->
			<VerticalLayout name="pref_layout" bkimage="bg10.png" inset="0,0,0,0">
				<VerticalLayout padding="10,10,10,0" vscrollbar="true">
					<Label text="红外探头" font="1" width="80"/>
					<VerticalLayout height="60" padding="20,0,0,10">
						<HorizontalLayout height="20" padding="0,5,0,5">
							<Button text="Add" width="60" padding="0,0,10,0" normalimage="button_nor.bmp" hotimage="button_over.bmp" pushedimage="button_down.bmp" disabledimage="Button_Non.png"/>
							<Button text="Remove" width="60" padding="10,0,0,0" normalimage="button_nor.bmp" hotimage="button_over.bmp" pushedimage="button_down.bmp" disabledimage="Button_Non.png"/>
						</HorizontalLayout>

						<VerticalLayout name="camera_info_layout" height="30" bkimage="bg12.png">
							<HorizontalLayout height="30" >
								<Label text="探头名字: " width="70"/>
								<Button name="camera_name_btn" padding="0,5,0,5" text="编辑个性签名" align="left" hotimage="file='btn_hot.png' corner='2,8,2,2'" width="200"/>
			          <RichEdit name="camera_name_edit" padding="0,5,0,5" bordercolor="#FFCCCCCC" bordersize="1" visible="false" text="编辑个性签名" multiline="false" rich="false"/>
			          <Control width="100"/>
								<Label text="IP: " width="30"/>
								<Button name="camera_ipaddr_btn" padding="0,5,0,5" text="192.168.2.1" align="left" hotimage="file='btn_hot.png' corner='2,8,2,2'" width="100"/>
			          <RichEdit name="camera_ipaddr_edit" padding="0,5,0,5" bordercolor="#FFCCCCCC" bordersize="1" visible="false" text="192.168.2.1" multiline="false" rich="false"/>
							</HorizontalLayout>
						</VerticalLayout>

					</VerticalLayout>


					<Label text="温度阈值" font="1" width="80"/>
					<VerticalLayout height="90" padding="20,0,0,10" bkimage="bg13.png">
						<HorizontalLayout height="30">
							<Label text="稳定温度-最小值: " width="120"/>
							<Button padding="0,5,0,5" text="0C" align="left" hotimage="file='btn_hot.png' corner='2,8,2,2'" width="100"/>
		          <RichEdit padding="0,5,0,5" bordercolor="#FFCCCCCC" bordersize="1" visible="false" text="编辑个性签名" multiline="false" rich="false"/>
		          <Control width="100"/>
							<Label text="最大值: " width="60"/>
							<Button padding="0,5,0,5" text="100C" align="left" hotimage="file='btn_hot.png' corner='2,8,2,2'" width="100"/>
		          <RichEdit padding="0,5,0,5" bordercolor="#FFCCCCCC" bordersize="1" visible="false" text="192.168.2.1" multiline="false" rich="false"/>
						</HorizontalLayout>

						<HorizontalLayout height="30">
							<Label text="跳变平均温度Delta-最小值: " width="180"/>
							<Button padding="0,5,0,5" text="0C" align="left" hotimage="file='btn_hot.png' corner='2,8,2,2'" width="100"/>
		          <RichEdit padding="0,5,0,5" bordercolor="#FFCCCCCC" bordersize="1" visible="false" text="编辑个性签名" multiline="false" rich="false"/>
		          <Control width="100"/>
							<Label text="最大值: " width="60"/>
							<Button padding="0,5,0,5" text="100C" align="left" hotimage="file='btn_hot.png' corner='2,8,2,2'" width="100"/>
		          <RichEdit padding="0,5,0,5" bordercolor="#FFCCCCCC" bordersize="1" visible="false" text="192.168.2.1" multiline="false" rich="false"/>
						</HorizontalLayout>

						<HorizontalLayout height="30">
							<Label text="跳变最大温度Delta-最小值: " width="180"/>
							<Button padding="0,5,0,5" text="0C" align="left" hotimage="file='btn_hot.png' corner='2,8,2,2'" width="100"/>
		          <RichEdit padding="0,5,0,5" bordercolor="#FFCCCCCC" bordersize="1" visible="false" text="编辑个性签名" multiline="false" rich="false"/>
		          <Control width="100"/>
							<Label text="最大值: " width="60"/>
							<Button padding="0,5,0,5" text="100C" align="left" hotimage="file='btn_hot.png' corner='2,8,2,2'" width="100"/>
		          <RichEdit padding="0,5,0,5" bordercolor="#FFCCCCCC" bordersize="1" visible="false" text="192.168.2.1" multiline="false" rich="false"/>
						</HorizontalLayout>
					</VerticalLayout>

					<Label text="采样模式" font="1" width="80"/>
					<VerticalLayout height="60" padding="20,0,0,10" bkimage="bg13.png">
						<HorizontalLayout height="20" padding="0,5,0,5">
							<Option width="12" padding="0,4,4,4" normalimage="RadioBtnNon.png" selectedimage="RadioBtnSel.png" group="sample_mode"/>
							<Label text="手动" padding="5,0,0,0"/>
						</HorizontalLayout>
						<HorizontalLayout height="20" padding="0,5,0,5">
							<Option width="12" padding="0,4,4,4" normalimage="RadioBtnNon.png" selectedimage="RadioBtnSel.png" group="sample_mode"/>
							<Label text="自动" width="100" padding="5,0,0,0"/>
							<Label text="自动刷新时间" width="100"/>
							<Button text="60m" align="left" hotimage="file='btn_hot.png' corner='2,8,2,2'" width="100"/>
		          <RichEdit padding="0,5,0,5" bordercolor="#FFCCCCCC" bordersize="1" visible="false" text="192.168.2.1" multiline="false" rich="false"/>
						</HorizontalLayout>
					</VerticalLayout>
				</VerticalLayout>

				<HorizontalLayout height="40" padding="0,0,10,0">
					<Control />
					<Button text="返回" name="from_setting_back_btn" width="50" padding="0,5,10,5" normalimage="button_nor.bmp" hotimage="button_over.bmp" pushedimage="button_down.bmp" disabledimage="Button_Non.png" />
				</HorizontalLayout>
			</VerticalLayout>

		</TabLayout>
	</HorizontalLayout>
</Window>
