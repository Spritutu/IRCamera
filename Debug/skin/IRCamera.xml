			<TabLayout selectedid="0">
				<VerticalLayout>
					<CameraImage name="camera_image" width="640" height="480" bkcolor="#FFD7EBEB" padding="10,10,10,10"/>
					<HorizontalLayout height="30" padding="10,10,0,10">
						<Label name="min_temp_label" width="60" font="1"/>
